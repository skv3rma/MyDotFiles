  <groupId>org.codehaus.mojo</groupId>
  <artifactId>exec-maven-plugin</artifactId>
  <version>1.6.0</version>
  <executions>
    <execution>
      <goals>
        <goal>java</goal>
      </goals>
    </execution>
  </executions>
  <configuration>
    <!-- class to be executed(main method) : fully qualified class name -->
    <mainClass>in.kodecamp.App</mainClass>
    <!-- optional -->
    <!--
    <arguments>
    </arguments>
    <systemProperties>
      <systemProperty>
        <key>myproperty</key>
        <value>myvalue</value>
      </systemProperty>
    </systemProperties>
    -->
  </configuration>
</plugin>
endsnippet

