cmd cpfilepath %{{
  echo "$f" | xclip -sel clip
  printf "Path Copied : $f"
}}

cmd chmod ${{
  printf "Mode Bits: "
  read ans

  for file in "$fx"
  do
    chmod $ans $file
  done

  lf -remote 'send reload'
}}

cmd sudomkfile %{{
  printf "File Name: "
  read ans
  sudo $EDITOR $ans
}}

