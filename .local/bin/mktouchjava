#!/bin/sh

if [ $# -lt 1 ]; then
    echo "😩 Missing files";
    return 1;
fi

createdFiles=()
echo "creating file(s)"
for f in "$@"; do
    mkdir -p -- "$(dirname -- "$f")"
    touch -- "$f"
    fileName=$(basename "$f")
    echo $fileName
    echo "class $fileName" > $fileName
    createdFiles+=" | "$f
done
echo "📝 : $createdFiles created Successfully."
