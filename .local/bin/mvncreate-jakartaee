#!/bin/bash
if [ -z "$1" ]
then
      prjname="demo-jakartaee"
      echo "????????????? WARNING : Project name not specified."
      echo "---------------------------------------------------"
      echo "///////////// CREATING PROJECT $prjname ///////////"
else
      prjname=$1
      echo "///////////// CREATING PROJECT '$1' ///////////////"
fi
  mvn archetype:generate \
  -DgroupId=in.kodecamp \
  -DartifactId=$prjname \
  -Dversion=1.0-SNAPSHOT \
  -Dpackage=in.kodecamp.app \
  -DarchetypeGroupId=com.airhacks \
  -DarchetypeArtifactId=jakartaee-essentials-archetype \
  -DinteractiveMode=false
